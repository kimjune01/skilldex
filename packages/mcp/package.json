{
  "name": "@skillomatic/mcp",
  "version": "0.1.0",
  "description": "MCP server for Skillomatic - exposes recruiting skills to Claude Desktop and other MCP clients",
  "type": "module",
  "bin": {
    "skillomatic-mcp": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "node build.mjs",
    "build:types": "tsc --emitDeclarationOnly",
    "typecheck": "tsc --noEmit",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@skillomatic/shared": "workspace:^",
    "@types/node": "^20.17.32",
    "esbuild": "^0.27.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^4.0.17"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/skillomatic/skillomatic.git",
    "directory": "packages/mcp"
  },
  "keywords": [
    "mcp",
    "claude",
    "recruiting",
    "ats",
    "skillomatic"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18"
  }
}
