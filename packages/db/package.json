{
  "name": "@skillomatic/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./src/index.ts"
    },
    "./schema": {
      "import": "./dist/schema.js",
      "types": "./src/schema.ts"
    },
    "./client": {
      "import": "./dist/client.js",
      "types": "./src/client.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "push": "drizzle-kit push",
    "push:prod": "TURSO_DATABASE_URL=$(turso db show skillomatic --url) TURSO_AUTH_TOKEN=$(turso db tokens create skillomatic) drizzle-kit push",
    "generate": "drizzle-kit generate",
    "migrate": "drizzle-kit migrate",
    "studio": "drizzle-kit studio",
    "seed": "tsx seed/index.ts",
    "seed:prod": "tsx src/seed-prod.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@libsql/client": "^0.17.0",
    "bcrypt-ts": "^8.0.0",
    "better-sqlite3": "^12.6.2",
    "drizzle-orm": "^0.45.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "drizzle-kit": "^0.31.8",
    "tsx": "^4.19.0",
    "typescript": "^5.3.3"
  }
}
